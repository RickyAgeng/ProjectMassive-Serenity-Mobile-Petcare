        android:layout_marginEnd="4dp"
        android:text="Metode                                         Pembayaran"
        android:textSize="20dp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/iconpembayaran"
