<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="20dp">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:id="@+id/main_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/con1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_cornerbayar"
                app:layout_constraintStart_toStartOf="@id/main_container"
                app:layout_constraintEnd_toEndOf="@id/main_container"
                app:layout_constraintTop_toTopOf="@id/main_container">

                <ImageView
                    android:id="@+id/img_1"
                    android:layout_width="wrap_content"
                    android:layout_height="220dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/img" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_1"
                    android:text="Butuh drh. Malam-malam gini???"
                    android:textSize="24dp"
                    android:textColor="@color/black"
                    android:layout_marginStart="8dp"
                    android:layout_below="@+id/img_1"
                    android:layout_marginTop="10dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_2"
                    android:text="Konsultasi drh di Care Pet aja yuk! Pasti Cepat Balasnya!"
                    android:layout_below="@+id/tv_1"
                    android:layout_marginTop="10dp"
                    android:padding="12dp"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/con2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/rounded_cornerbayar"
                app:layout_constraintTop_toBottomOf="@id/con1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_1"
                    android:id="@+id/img_2"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_3"
                    android:text="Segera Vaksin Kucing Anda!"
                    android:textSize="24dp"
                    android:textColor="@color/black"
                    android:layout_below="@+id/img_2"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="8dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Gratis suntik vitamin. Selengkapnya cek di artikel berikut!"
                    android:layout_below="@+id/tv_3"
                    android:layout_marginTop="10dp"
                    android:padding="12dp"
                    />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>